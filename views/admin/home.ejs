<!DOCTYPE html>
<!-- Designined by CodingLab | www.youtube.com/codinglabyt -->
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <title>SHOP EC-Admin</title>
    <link rel="stylesheet" href="CSS/dash.css">
    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link href='' rel='stylesheet'>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
   </head>
<body>
  <div class="sidebar">
    <div class="logo-details">
      <i class='bx bx-cart'></i>
      <span class="logo_name">SHOP EC</span>
    </div>
      <ul class="nav-links">
        <li>
          <a href="#" class="active">
            <i class='bx bx-bar-chart-alt-2' ></i>
            <span class="links_name">Dashboard</span>
          </a>
        </li>
        <li>
          <a href="/admin/dashboard">
            <i class='bx bx-group' ></i>
            <span class="links_name">Users</span>
          </a>
        </li>
        <li>
          <a href="/admin/products">
            <i class='bx bx-box' ></i>
            <span class="links_name">Products</span>
          </a>
        </li>
        <li>
          <a href="/admin/categories">
            <i class='bx bx-category' ></i>
            <span class="links_name">Categories</span>
          </a>
        </li>
        <li>
          <a href="/admin/brands">
            <i class='bx bx-polygon' ></i>
            <span class="links_name">Brands</span>
          </a>
        </li>
        <li>
          <a href="/admin/orders">
            <i class='bx bx-list-ul' ></i>
            <span class="links_name">Order list</span>
          </a>
        </li>
        <li>
          <a href="/admin/coupons">
            <i class='bx bx-book-content' ></i>
            <span class="links_name">Coupens</span>
          </a>
        </li>
        <li>
          <a href="/admin/setBanner">
            <i class='bx bx-book-alt' ></i>
            <span class="links_name">Banners</span>
          </a>
        </li>
        
        <li class="log_out">
          <a href="/admin/logout">
            <i class='bx bx-log-out'></i>
            <span class="links_name">Log out</span>
          </a>
        </li>
      </ul>
  </div>
  <section class="home-section">
    <nav>
      <div class="sidebar-button">
        <i class='bx bx-menu sidebarBtn'></i>
        <span class="dashboard">Dashboard</span>
      </div>
      <div class="search-box">
        <!-- <input type="text" placeholder="Search...">
        <i class='' ></i> -->
      </div>
      <div class="profile-details">
        <!--<img src="images/profile.jpg" alt="">-->
        <i class='bx bx-user-check' ></i>
        <span class="admin_name">Admin</span>
        <!-- <i class='bx bx-chevron-down' ></i> -->
      </div>
    </nav>

    <div class="home-content">
      <div class="overview-boxes">
        <div class="box">
          <div class="right-side">
            <div class="box-topic">Today sale</div>
            <div class="number">Rs.<%= todaySale %></div>
            <div class="indicator">
              
            </div>
          </div>
          <i class='bx bx-cart-alt cart'></i>
        </div>
        <div class="box">
          <div class="right-side">
            <div class="box-topic">Total Sales</div>
            <div class="number">Rs.<%= totalSale %></div>
            <div class="indicator">
              
            </div>
          </div>
          <i class='bx bx-cart-alt cart'></i>
        </div>
        <div class="box">
          <div class="right-side">
            <div class="box-topic">Today Revenue</div>
            <div class="number">Rs.<%= todayRevenue %></div>
            <div class="indicator">
              
            </div>
          </div>
          <i class='bx bxs-cart-add cart two' ></i>
        </div>
        <div class="box ">
          <div class="right-side">
            <div class="box-topic">Total Revenue</div>
            <div class="number">Rs.<%= totalRevenue %></div>
            <div class="indicator">
              
            </div>
          </div>
          <i class='bx bxs-cart-add cart two' ></i>
        </div>
      </div>


      <input type="hidden" name="" id="array" value="<%= values %> ">
                <input type="hidden" name="" id="revenue" value="<%= revenue %> ">

                <input type="hidden" name="" id="ordered" value="<%= ordered %> ">
                <input type="hidden" name="" id="packed" value="<%= packed %> ">
                <input type="hidden" name="" id="shipped" value="<%= shipped %> ">
                <input type="hidden" name="" id="delivered" value="<%= delivered %> ">
                <input type="hidden" name="" id="cancelled" value="<%= cancelled %> ">

      <!-- graph -->
      <div class="sales-boxes">
        <div class="recent-sales box">
          <h4>Sales Chart</h4>
          <div>
            <canvas id="myChart"></canvas>
          </div>
        </div>
      </div>
    <br>
      
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      
      <script>

const a = parseInt(document.getElementById('ordered').value)
                    const b = parseInt(document.getElementById('packed').value)
                    const c = parseInt(document.getElementById('shipped').value)
                    const d = parseInt(document.getElementById('delivered').value)
                    const e = parseInt(document.getElementById('cancelled').value)

        const ctx = document.getElementById('myChart');
      
        new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['Ordered', 'Packed', 'Shipped', 'Delivered', 'Canceled'],
            datasets: [{
              label: 'No of Orders',
              data: [a, b, c, d, e],
              borderWidth: 1
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });
      </script>

      <!-- graph -->
      

      <div class="sales-boxes">
        <div class="recent-sales box">
          <div class="title">Recent Sales</div>
          <div class="sales-details">
            <ul class="details">
              <li class="topic">Order ID</li>
              <% for(let item of completed) { %>
              <li><a href="#"><%= item._id %></a></li>
              <% } %>
              
            </ul>
            <ul class="details">
            <li class="topic">Customer</li>
            <% for(let item of completed) { %>
            <li><a href="#"><%= item.address.name %></a></li>
            <% } %>
          </ul>
          <ul class="details">
            <li class="topic">Amount</li>
            <% for(let item of completed) { %>
            <li><a href="#">Rs.<%= item.bill %></a></li>
            <% } %>
          </ul>
          <ul class="details">
            <li class="topic">Status</li>
            <% for(let item of completed) { %>
            <li><a href="#">Paid</a></li>
            <% } %>
          </ul>
          </div>
          <div class="button">
            <a href="/admin/orders">See All</a>
          </div>
        </div>
        <!-- <div class="top-sales box">
        </div> -->
      </div>
    </div>
  </section>

  <script>


   let sidebar = document.querySelector(".sidebar");
let sidebarBtn = document.querySelector(".sidebarBtn");
sidebarBtn.onclick = function() {
  sidebar.classList.toggle("active");
  if(sidebar.classList.contains("active")){
  sidebarBtn.classList.replace("bx-menu" ,"bx-menu-alt-right");
}else
  sidebarBtn.classList.replace("bx-menu-alt-right", "bx-menu");
}
 </script>

</body>
</html>

